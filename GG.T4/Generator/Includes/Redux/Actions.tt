export function getAll() {
  return {
    types: [<#=CamelCaseName#>Types.GET_ALL_<#=UpperName#>, <#=CamelCaseName#>Types.GET_ALL_<#=UpperName#>_SUCCESS, <#=CamelCaseName#>Types.GET_ALL_<#=UpperName#>_FAIL],
