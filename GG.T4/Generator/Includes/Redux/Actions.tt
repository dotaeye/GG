      token: true
    })
  };
}

export function getById(id) {
  return {
    types: [<#=CamelCaseName#>Types.GET_ONE_<#=UpperName#>, <#=CamelCaseName#>Types.GET_ONE_<#=UpperName#>_SUCCESS, <#=CamelCaseName#>Types.GET_ONE_<#=UpperName#>_FAIL],
